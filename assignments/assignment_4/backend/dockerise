docker run -dp 3001:3001 
  -w /app -v ${PWD}:/app 
  -e MYSQL_HOST=mysql 
  -e MYSQL_USER=root 
  -e MYSQL_PASSWORD=qu%rK1ness 
  -e MYSQL_DB=information_schema
  node:18-alpine 
  sh -c "npm run serve"

docker run -d 
    --network dblink --network-alias mysql 
    -v dblink-mysql-data:/var/lib/mysql 
    -e MYSQL_ROOT_PASSWORD=qu%rK1ness
    -e MYSQL_DATABASE=users
    mysql:5.7

version: '2'

services:

  mysql:
    image: mariadb:10.1.19
    ports:
      - 8083:3306
    volumes:
      - ./mysql:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: wp